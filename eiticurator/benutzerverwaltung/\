from core import *

class controller(object):
  def __init__(self):
    self.engine = sa.create_engine(PG, echo=True)
    Base.metadata.create_all(engine)
    self.session = orm.sessionmaker(engine)

  def addUser(self):
    domain = raw_input('Domain [mpisoc, mucam, mpdl]: ')
    oeinheit = raw_input('Oeinhein [IT, MEA, MPDL, SOCR, PSY, VW, BIB, FELLOW]: ')
    last_name = raw_input('Nachname: ')
    first_name = raw_input('Vorname: ')
    shown_name = raw_input('Anzeigename: ')
    uid = raw_input('UID: ')
    emailaddress = raw_input('eMail-Adresse: ')
    room = raw_input('Raum: ')
    check = raw_input('Alles korrekt? ')
    # -----------------------------------------
    if check in ['ja', 'Ja', 'JA', 'yes', 'Yes', 'Yes']:
      konto = Konto(oeinhein=oeinheit, domain=domain, uid=uid)
      email = Emailadresse(emailadresse=emailaddress)
      benutzer = Benutzer(
          emailadresse=emailadresse,
          nachname=last_name,
          vorname=first_name,
          anzeigename=shown_name,
          raum=room)
      try:
        self.session.add(konto)
        self.session.add(email)
        self.session.add(benutzer)
        self.session.commit()
      except Exception, e:
        print e
        print "rolling back!"
        self.session.rollback()

if __name__ == '__main__':
  engine = sa.create_engine(PG, echo=True)
  Base.metadata.create_all(engine)
  session = orm.sessionmaker(engine)

  
